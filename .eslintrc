{
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true,
    "cypress/globals": true
  },
  "extends": [
    "prettier",
    "prettier/standard",
    "prettier/react",
    "plugin:react/recommended"
  ],
  "plugins": ["react", "jest", "cypress", "prettier"],
  "rules": {
    "prettier/prettier": "error"
  },
  "parser": "babel-eslint",
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  }
}
